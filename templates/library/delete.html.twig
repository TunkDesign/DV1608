{% extends "library/base.html.twig" %}

{% block title %}Delete {{ book.title }}{% endblock %}

{% block body %}
<div class="container">

    {{ include('flash.html.twig') }}

    <h1>Delete {{ book.title }}</h1>
    <p>Are you sure you want to delete this book?</p>
    <form method="post" action="{{ path('library_delete_post')}}">
        <div class="form-group">
            <input type="hidden" name="id" value="{{ book.id }}">
            <button type="submit" class="delete-button">Delete</button>
        </div>
    </form>

    <div class="form-group">
        <button class="back-button" onclick="location.href='{{ path('library_view_id', {'id': book.id}) }}';">‚Üê Back to Book</button>
    </div>
</div>
{% endblock %}
